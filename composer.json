{
  "name": "sam-at-github/jsonschema",
  "description": "A PHP JSON Schema validator",
  "license": "GPL-3.0",
  "require": {
    "php": ">=5.3",
    "ext-mbstring": "*",
    "sam-at-github/jsondoc": "dev-master"
  },
  "require-dev": {
      "phpunit/phpunit" : "4.*",
      "ext-xdebug": "*"
  },
  "autoload": {
    "psr-4": {
      "JsonSchema\\": ""
    }
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/sam-at-github/jsondoc"
    }
  ],
  "scripts": {
    "test": "phpunit --configuration=./tests/phpunit.xml tests/",
    "coverage": "phpunit --coverage-text --coverage-clover=coverage.clover --configuration=./tests/phpunit.xml tests/",
    "cs": "phpcs --standard=psr2 .",
    "post-install-cmd": "ln -sr vendor utils/"
  }
}
